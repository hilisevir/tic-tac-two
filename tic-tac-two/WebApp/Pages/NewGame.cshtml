@page
@model WebApp.Pages.NewGame

<div class="text-center">
    <h1>@Model.UserName's HOME</h1>
    <h2>New Game</h2>
</div>


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConfigurationId" class="control-label">Choose configuration</label>
                <select asp-for="ConfigurationId" class ="form-select" asp-items="Model.ConfigSelectList"></select>
            </div>
            <div class="form-group">
                <label asp-for="GameTypeId" class="control-label">Choose game type</label>
                <select asp-for="GameTypeId" class ="form-select" asp-items="Model.GameTypeList"></select>
            </div>
            <div class="form-group">
                <label asp-for="GameName" class="control-label">Enter game name</label>
                <input asp-for="GameName" class="form-control" />
                <span asp-validation-for="GameName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
